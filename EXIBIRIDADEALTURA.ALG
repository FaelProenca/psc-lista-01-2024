Algoritmo "ExibirNome"
Var
   nome: caractere
   idade : inteiro
   altura : real

Inicio
   Escreva("Digite seu nome: ")
   Leia(nome)
   Escreva("Digite seu idade: ")
   Leia(idade)
   Escreva("Digite seu altura: ")
   Leia(altura)
   Escreval("Seu nome é: ", nome)
   Escreval("Sua idade é: ", idade)
   Escreval("Sua altura é: ",altura)

Fimalgoritmo
